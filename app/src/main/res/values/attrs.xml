<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepView">

        <!--全部颜色&大圆弧-->
        <attr name="entiretyColor" format="color" />
        <!--部分颜色&小圆弧-->
        <attr name="portionColor" format="color" />
        <!--圆弧宽度-->
        <attr name="borderWidth" format="dimension" />
        <!--步数字体大小-->
        <attr name="stepTextSize" format="dimension" />
        <!--步数字体颜色-->
        <attr name="stepTextColor" format="color" />

    </declare-styleable>

    <declare-styleable name="ColorTrackTextView">

        <!--不变化的颜色-->
        <attr name="originColor" format="color" />
        <!--变化的颜色-->
        <attr name="changeColor" format="color" />

    </declare-styleable>

    <declare-styleable name="LetterSideBar">
        <!--索引列表颜色-->
        <attr name="sideBarColor" format="color" />
        <!--索引列表颜色-->
        <attr name="sideBarHeightColor" format="color" />
        <!--索引列表大小-->
        <attr name="sideBarSize" format="dimension" />
    </declare-styleable>

</resources>